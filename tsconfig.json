{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules"]
}
